<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= button_to 'Show', product,:class => "btn btn-inverse btn-mini", :method => :get %></td>
    <td><%= button_to 'Edit', edit_product_path(product) ,:class => "btn btn-inverse btn-mini", :method => :get%></td>
    <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger btn-mini", :method => :get %></td>
  </tr>
<% end %>
</table>

